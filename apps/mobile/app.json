{
  "expo": {
    "name": "PayDay - 스마트 수익 플랫폼",
    "slug": "payday",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.payday.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "카메라를 사용하여 프로필 사진을 촬영합니다.",
        "NSPhotoLibraryUsageDescription": "갤러리에서 사진을 선택합니다.",
        "NSLocationWhenInUseUsageDescription": "근처의 일자리를 찾기 위해 위치 정보를 사용합니다."
      }
    },
    "android": {
      "package": "com.payday.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": ""
      }
    },
    "owner": "payday-team"
  }
}
